@{
  Layout = "_Layout";
}

@using PierresTreats.Models;
@model List<PierresTreats.Models.Flavor>;


<h3>Flavors</h3>
<hr />
<div class="flex container">
  @if (Model.Count == 0)
  {
    <h5>None.</h5>
  }
  @foreach (Flavor flavor in Model)
  {
    <h5>@Html.ActionLink($"{flavor.FlavorName}", "Details", new { id = flavor.FlavorId })</h5>
  }
</div>
<hr />

<h5>@Html.ActionLink("Add new Flavor", "Create")</h5>
