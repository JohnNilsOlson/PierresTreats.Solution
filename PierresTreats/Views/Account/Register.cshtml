@{
  Layout = "_Layout";
}

@using PierresTreats.ViewModels
@model RegisterViewModel

<h3>Register an Account</h3>
<hr />
@using (Html.BeginForm())
{
  <div class="form-group">
    @Html.LabelFor(user => user.UserName)
    @Html.TextBoxFor(user => user.UserName, new { @class="form-control", required=true })
  </div>
  <div class="form-group">
    @Html.LabelFor(user => user.Email)
    @Html.TextBoxFor(user => user.Email, new { @class="form-control", required=true })
  </div>
  <div class="form-group">
    @Html.LabelFor(user => user.Password)
    @Html.TextBoxFor(user => user.Password, new { @class="form-control", required=true })
  </div>
  <div class="form-group">
    @Html.LabelFor(user => user.ConfirmPassword)
    @Html.TextBoxFor(user => user.ConfirmPassword, new { @class="form-control", required=true })
  </div>
  <input class="btn btn-outline-dark" type="submit" value="Register" />
}