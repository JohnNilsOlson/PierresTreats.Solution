@{
  Layout = "_Layout";
}

@using PierresTreats.Models;
@model List<PierresTreats.Models.Treat>;


<h3>Treats</h3>
<hr />
<div class="flex container">
  @if (Model.Count == 0)
  {
    <h5>None.</h5>
  }
  @foreach (Treat treat in Model)
  {
    <h5>@Html.ActionLink($"{treat.TreatName}", "Details", new { id = treat.TreatId })</h5>
  }
</div>
<hr />
<h5>@Html.ActionLink("Add new Treat", "Create")</h5>