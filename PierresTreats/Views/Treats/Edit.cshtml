@{
  Layout = "_Layout";
}

@model PierresTreats.Models.Treat

<h4 class="view-title">@Html.Label($"{Model.TreatName}")</h4>
<h4 class="view-title">Edit Treat</h4>
<div class="flex container">
  @using (@Html.BeginForm())
  {
    @Html.HiddenFor(model => model.TreatId)
    <div class="form-group">
      @Html.Label("Treat Name")
      @Html.TextBoxFor(model => model.TreatName, new {@class="form-control"})
    </div>
    <input type="submit" value="Apply Changes" class="btn btn-outline-dark" />
  }
</div>