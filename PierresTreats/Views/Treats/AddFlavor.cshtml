@{
  Layout = "_Layout";
}

@model PierresTreats.Models.Treat

<h4>@Html.Label($"{Model.TreatName}")</h4>
<h4>Add Flavor</h4>

@using (@Html.BeginForm())
{
  @Html.HiddenFor(model => model.TreatId)
  <div class="form-group">
    @Html.Label("Flavor")
    @Html.DropDownList("FlavorId", null, new { @class="form-control" })
  </div>
  <input type="submit" value="Add Flavor" class="btn btn-outline-dark" />
}
