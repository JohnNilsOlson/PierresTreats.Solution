@{
  Layout = "_Layout";
}

@model PierresTreats.Models.Treat

<h4 class="view-title">Add Treat</h4>
<div class="flex container">
  @using (@Html.BeginForm())
  {
    <div class="form-group">
      @Html.Label("Treat Name")
      @Html.TextBoxFor(model => model.TreatName, new {@class="form-control"})
    </div>
    <input type="submit" value="Add Treat" class="btn btn-outline-dark" />
  }
</div>